<h1>Edit Story</h1>
<div class="row">
  <form class="col s12" action="/stories" method="post">
    <!-- Title Input -->
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>
    <!-- Status (Public, Private, Unpublished) -->
    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
      </div>
      <label for="status">Status</label>
    </div>
    <!-- Allow Comments Checkbox -->
    <p>
      <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments}}  checked="checked" {{/if}}>
      <label for="filled-in-box">Allow Comments</label>
    </p>
    <!-- Body Textarea -->
    <div class="row">
      <div class="input-field">
        <h5>Tell us your story:</h5>
        <textarea name="body">{{story.body}}</textarea>
      </div>
    </div>
    <!-- Submit Button -->
    <input type="submit" value="Save" class="btn">
  </form>
</div>
