<h1>Welcome {{user.firstName}} {{user.lastName}} !</h1>
<h4>Your Stories</h4>
{{#if stories}}
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
    <tr>
      <td>
        <a href="/stories/show/{{id}}">{{title}}</a>
      </td>
      <td>
        {{formatDate date 'MMMM Do YYYY'}}
      </td>
      <td>
        <span>{{status}}</span>
      </td>
      <td class="center-align">
        <a href="/stories/edit/{{id}}" class="btn left-align">
          <i class="fa fa-pencil"></i>
        </a>
        <form action="/stories/{{id}}" method="post" id="delete-form">
          <button class="btn red" type="submit">
            <i class="fa fa-trash"></i>
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
  You have no stories yet. <a href="/stories/add">Write one!</a>
{{/if}}
